@model List<LoanPayment>

<h2>Таблица платежей:</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Номер платежа</th>
            <th>Дата платежа</th>
            <th>Сумма платежа</th>
            <th>Основной долг</th>
            <th>Проценты</th>
            <th>Остаток долга</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.PaymentNumber</td>
                <td>@payment.PaymentDate</td>
                <td>@payment.AmmountPayment</td>
                <td>@payment.PrincipalDebt</td>
                <td>@payment.Rate</td>
                <td>@payment.BalanceDebt</td>
            </tr>
        }
    </tbody>
</table>